<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestingApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->







        <!-- Mengubah warna action bar -->
        <!--<item name="actionBarTheme">@style/MyActionBar</item>-->

        <!-- Mengubah warna icon status bar jadi abu-abu -->
        <!--<item name="android:windowLightStatusBar">true</item>
        <item name="android:textColorPrimary">#4C11D3</item>-->

        <!-- Mengubah warna icon jadi abu-abu -->
        <!--<item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>-->
    </style>


    <!--Theme TampilanAwal Only-->

    <style name="Theme.TestingApp.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen_img</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <!--=============================-->

    <style name="Theme.TestingApp.NoActionAndTitle">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="alertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="buttonBarPositiveButtonStyle">@style/ButtonStyle.textColor</item>
        <item name="buttonBarNegativeButtonStyle">@style/ButtonStyle.textColor</item>
    </style>

    <style name="ButtonStyle.textColor" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TextColorPrimary">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TextColorPrimary.Box">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextColorPrimary.Box.List">
        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="TextColorPrimary.Box.Normal">
        <item name="android:inputType">text</item>
    </style>

    <style name="TextColorPrimary.Box.Normal.Dropdown">
        <item name="android:drawableEnd">@drawable/ic_dropdown</item>
    </style>

    <style name="TextColorPrimary.Box.Password">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="TextColorPrimary.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="ButtonTheme.ColorPrimary">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="ButtonTheme.Red">
        <item name="android:backgroundTint">@color/redtua</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxBackgroundMode">outline</item>
    </style>
</resources>